#include<iostream>
using namespace std;

int fact(int a){
    if(a >1) {
        return a * fact(a-1);
    }
    else {
        return 1;
    }
}

int main() {
    int num;
    cout<<"Enter a Positive Number : ";
    cin>>num;
    
    int factorial = fact(num);
    cout<<"Factorial of "<< num <<" is : "<<factorial;
    return 0;
}
